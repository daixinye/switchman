{
    "compilerOptions": {
        "strict": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es2015"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": [
        "src",
        "typings",
        "lib"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
